{% extends 'GsbAppliFraisBundle::layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('bundles/gsbapplifrais/css/historique.css') }}" type="text/css" media="all" />
	<link rel="stylesheet" href="{{ asset('bundles/gsbapplifrais/css/saisie.css') }}" type="text/css" media="all" />
{% endblock %}

{% block corps %}
	<div class="listeHistorique">
		{% for fiche in fiches %}
			<div>
				{{fiche.date.format('m-Y')}}
				{{fiche.nbJustificatifs}}
				{{fiche.dateModification.format('d-m-Y')}}
				{{fiche.montantValide}}
				{{fiche.etat.libelle}}
			</div>
		{% endfor %}
	</div>
{% endblock %}

{% block rightUp %}
		<div class="contentForm">
			{{ form(formFiche) }}
		</div>
{% endblock %}

{% block rightDown %}
		<div class="contentForm">
			{{ form(formLigne) }}
		</div> 
{% endblock %}