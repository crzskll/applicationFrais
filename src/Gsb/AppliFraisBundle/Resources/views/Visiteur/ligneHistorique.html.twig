{% extends 'GsbAppliFraisBundle:visiteur:historique.html.twig' %}

{% block corps %}
	<div class="tableFiche">


		{% if type != 'horsForfait' %}
			<table class="ligneFiche">
			   <caption>Lignes forfaitisées</caption>

			   <tr>
			       <td>Date</td>
			       <td>Nuit</td>
			       <td>Repas</td>
			       <td>Km</td>
			       <td>Etape</td>
			       <td>Total</td>
			       <td>Statut</td>
			       <td>Motif</td>
			       <td></td>
			   </tr>

			   {% for ligne in lignesForfait %}
				   <tr>
				       <td>{{ligne.fiche.date.format('F Y')}}</td>
				       {% for frais in ligne.fraisForfaits %}
							<td>{{frais.quantite}}</td>
						{% endfor %}
						<td>{{ligne.totalLigneForfait}} €</td>
						<td>{{ligne.statut}}</td>
				       <td>{{ligne.motif}}</td>
				       <td><a href="{{ path('historique_show', {'idFiche': ligne.fiche.id }) }}">show</a></td>
				   </tr>
				{% endfor %}
			</table>
		{% endif %}

		{% if type != 'Forfait' %}
			<table>
			   <caption>Lignes non forfaitisées</caption>

			   <tr>
			       <td>Date</td>
			       <td>Description</td>
			       <td>Montant</td>
			       <td>Statut</td>
			       <td>Motif</td>
			       <td></td>
			   </tr>

			   {% for ligne in lignesHorsForfait %}
				   <tr>
					<td>{{ligne.date.format('d-m-Y')}}</td>
					<td>{{ligne.libelle}}</td>
					<td>{{ligne.montant}}</td>
					<td>{{ligne.statut.libelle}}</td>
					<td>{{ligne.motif}}</td>
					<td><a href="{{ path('historique_show', { 'idFiche': ligne.fiche.id }) }}">show</a></td>
					</tr>
				{% endfor %}
			</table>
		{% endif %}

	</div>
{% endblock %}