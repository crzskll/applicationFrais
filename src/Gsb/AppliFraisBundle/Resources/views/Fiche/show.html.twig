{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Fiche</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Nbjustificatifs</th>
                <td>{{ entity.nbJustificatifs }}</td>
            </tr>
            <tr>
                <th>Datemodification</th>
                <td>{{ entity.dateModification|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Montantvalide</th>
                <td>{{ entity.montantValide }}</td>
            </tr>
            <tr>
                <th>Refusligne</th>
                <td>{{ entity.refusLigne }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gsb_fiche') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gsb_fiche_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
