{% extends '::base.html.twig' %}

{% block body -%}
<a href="{{ path('admin')}}">Retour</a>
    <h1>Employe list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Login</th>
                <th>Motdepasse</th>
                <th>Dateembauche</th>
                <th>Poste</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_employe_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.codePostal }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.motDePasse }}</td>
                <td>{% if entity.dateEmbauche %}{{ entity.dateEmbauche|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.poste }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_employe_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_employe_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_employe_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
